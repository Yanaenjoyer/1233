<Window x:Class="WpfApp1.user_managment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="user_managment" Height="457" Width="869" Background="#FF89A4A7">
    <Grid Background="#FFADD0A7" Height="434" VerticalAlignment="Center" HorizontalAlignment="Center" Width="870">
        <DataGrid   HorizontalAlignment="Left" Height="190" VerticalAlignment="Top" Width="602" AutoGenerateColumns="False" x:Name="DG" Margin="23,91,0,0"  >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding EmployeeId}" Header="Номер сотрудника" Width="100"/>
                <DataGridTextColumn Binding="{Binding UserId}" Header="Номер пользователя" Width="100"/>
                <DataGridTextColumn Binding="{Binding Role}" Header="Роль" Width="100"/>
                <DataGridTextColumn Binding="{Binding Login}" Header="Логин" Width="100"/>
                <DataGridTextColumn Binding="{Binding Password}" Header="Пароль" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="updateButton" FontSize="20" Content="Обновить" HorizontalAlignment="Center" Margin="647,115,0,0" VerticalAlignment="Top" Width="184" Height="40" Click="updateButton_Click" Background="#FF7BB370" FontFamily="Arial Black"/>
        <Button x:Name="removeButton" FontSize="20" Content="Удалить" HorizontalAlignment="Center" Margin="647,204,0,0" VerticalAlignment="Top" Width="184" Height="40" Click="removeButton_Click" Background="#FF7BB370" FontFamily="Arial Black"/>
        <Button x:Name="changeButton" FontSize="20" Content="Изменить" HorizontalAlignment="Center" Margin="647,160,0,0" VerticalAlignment="Top" Width="184" Height="40" Click="changeButton_Click" RenderTransformOrigin="0.324,0.455" Background="#FF7BB370" FontFamily="Arial Black"/>
        <Button x:Name="izm" Content="Сохранить изменения" HorizontalAlignment="Center" Margin="242,224,0,0" VerticalAlignment="Top" Height="82" Width="162" Click="Button_Click" Visibility="Hidden"/>
        <TextBox x:Name="nomsot" HorizontalAlignment="Left" Margin="85,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="33" Visibility="Hidden"/>
        <TextBox x:Name="par" HorizontalAlignment="Left" Margin="85,322,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="33" Visibility="Hidden"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Margin="85,284,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="33" Visibility="Hidden"/>
        <TextBox x:Name="rol" HorizontalAlignment="Left" Margin="85,246,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="33" Visibility="Hidden"/>
        <TextBox x:Name="nomus" HorizontalAlignment="Left" Margin="85,208,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="33" Visibility="Hidden"/>
        <Button FontSize="20" Content="Назад" Margin="684,380,0,10" Click="BackButton" Background="#FF7BB370" HorizontalAlignment="Center" Width="175" FontFamily="Arial Black"/>
        <Label x:Name="aa" Content="" HorizontalAlignment="Center" Height="43" Margin="0,10,697,0" VerticalAlignment="Top" Width="163" Foreground="#FF676767"/>
        <TextBox HorizontalAlignment="Center" Height="53" Margin="0,0,0,371" TextWrapping="Wrap" Text="Управление пользователями" VerticalAlignment="Bottom" Width="360" Background="Transparent" BorderBrush="Transparent" FontFamily="Arial Black" FontSize="20"/>
    </Grid>
</Window>
