<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF89A4A7">

    <Grid Background="#FFADD0A7" Height="434" VerticalAlignment="Center" HorizontalAlignment="Center" Width="800">

        <Button Content="Войти" HorizontalAlignment="Center" Height="75" Margin="0,272,0,0" VerticalAlignment="Top" Width="508" Click="Button_Click" FontSize="24" FontFamily="Arial Black" Background="#FF7BB370" />
        <TextBox x:Name="login" HorizontalAlignment="Center" Height="78" Margin="0,0,0,270" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Bottom" Width="382" Background="White" FontSize="24" FontFamily="Arial Black"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Height="77" VerticalAlignment="Center" Width="382" Background="#FFF7F7F7" />
        <Label Content="Авторизация" HorizontalAlignment="Left" Height="71" VerticalAlignment="Top" Width="248" FontFamily="Arial Black" FontSize="30" Foreground="Black" Margin="260,10,0,0"/>

    </Grid>
</Window>
